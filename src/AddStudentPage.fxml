<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AddStudentPageController">
   <children>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="386.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@uocLogo.jpg" />
         </image>
      </ImageView>
      <Label layoutX="21.0" layoutY="58.0" text="Student Name: " />
      <TextField fx:id="studentNameText" layoutX="124.0" layoutY="53.0" promptText="Letters Only " />
      <Label layoutX="21.0" layoutY="96.0" text="Student ID: " />
      <ChoiceBox fx:id="majorChoiceBox" layoutX="141.0" layoutY="143.0" onContextMenuRequested="#addMajorChoiceBox" prefWidth="150.0" />
      <Label layoutX="14.0" layoutY="148.0" text="Student Major" />
      <Button fx:id="backToStudentButton" layoutX="21.0" layoutY="359.0" mnemonicParsing="false" onAction="#backToStudent" text="Back" />
      <Button fx:id="addStudentButton" layoutX="262.0" layoutY="275.0" mnemonicParsing="false" onAction="#addStudent" text="Add" />
      <TextField fx:id="studentIDText" layoutX="124.0" layoutY="100.0" />
   </children>
