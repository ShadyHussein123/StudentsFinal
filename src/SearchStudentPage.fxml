          <TableColumn fx:id="nameColumn" prefWidth="107.0" text="Student Name" />
          <TableColumn fx:id="studentIDColumn" prefWidth="85.0" text="Student ID" />
            <TableColumn fx:id="studentMajorColumn" prefWidth="70.0" text="Major" />
            <TableColumn fx:id="coursesColumn" prefWidth="94.0" text="Courses" />
        </columns>
      </TableView>
      <Label layoutX="14.0" layoutY="240.0" text="Student Name: " />
      <TextField layoutX="131.0" layoutY="235.0" />
      <TextField layoutX="131.0" layoutY="292.0" />
      <Label layoutX="14.0" layoutY="297.0" text="Student ID:  " />
      <Button fx:id="showStudentSearch" layoutX="253.0" layoutY="334.0" mnemonicParsing="false" onAction="#showStudent" text="Show Student" />
      <Button fx:id="backToStudent" layoutX="14.0" layoutY="361.0" mnemonicParsing="false" onAction="#backToStudent" text="Back" />
   </children>
</AnchorPane>
