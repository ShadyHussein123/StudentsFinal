<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SearchStudentController">
   <children>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="386.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@uocLogo.jpg" />
         </image>
      </ImageView>
      <TableView fx:id="tableView" layoutX="14.0" layoutY="5.0" prefHeight="209.0" prefWidth="357.0">
